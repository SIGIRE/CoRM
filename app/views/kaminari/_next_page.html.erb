        <%= link_to raw(t 'views.pagination.next'), url, :rel => 'next', :remote => remote %>
    <% else %>
        <%= link_to raw(t 'views.pagination.next'), "#", :rel => 'next', :remote => remote %>
    <% end %>
</li>