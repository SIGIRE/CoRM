<%= form_for(@origin, :html => { :class => "well "}) do |f| %>
  <% if @origin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@origin.errors.count, "error") %> prohibited this origin from being saved:</h2>

      <ul>
      <% @origin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  <div class="field">
    <div class="span2">Nom :</div><%= f.text_field :name,{ :class => 'required'} %><span class="req" />
  </div>
  <div class="field">
    <div class="span2"><%= f.label :description %></div>
    <%= f.text_area :description, :display_with => :simple_format, :rows => "5", :style=>'width: 30em;' %>
  </div>
  
          <br />
  	
	<div class="field">
    <% if !@origin.id.nil? %>
		<div class="span9"> Créé par : <%= @origin.author.full_name %>, le </strong><%= @origin.created_at.strftime("%d/%m/%y à %H:%M") %>. </div> <br />
		
		<% if !@origin.updated_by.nil? %>
			<div class="span9"> Dernièrement modifié par : <%= @origin.editor.full_name %>, le <%= @origin.updated_at.strftime("%d/%m/%y à %H:%M") %>. </div> <br />
		
		<% else %>
		<% end %>
		
	<% end %>
	</div>
	  
	<hr />
  
   <div class="row">
    <%= if !@origin.id.nil? then f.submit "Modifier l'origine", :class =>"btn btn-primary",:id =>"origin_validate_form" else f.submit 'Créer une origine', :class =>"btn btn-primary",:id =>"origin_validate_form" end%>
    <%= if !@origin.id.nil? then link_to '<i class="fa fa-trash-o fa-lg"></i>'.html_safe, @origin, :title => "Supprimer l'origine", :confirm => 'Confirmer la suppression ?', :class=>"pull-right btn btn-danger", :method => :delete end %> 
    </div>
  </div>
<% end %>
