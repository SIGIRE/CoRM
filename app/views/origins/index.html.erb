<%= render 'title', :locals => { :title => @title }%>

<div class="container-fluid">
  
  <table class="table table-bordered table-striped">
   <thead> 
    <tr>
      <th class="text-center">Nom</th>
      <th class="text-center">Description</th>
      <th class="text-center">Éditer</th>
    </tr>
   </thead>
   
  <tbody> 
  <% @origins.each do |origin| %>
    <tr>
      <td class="text-center"><%= origin.name %></td>
      <td class="text-center"><%= truncate(origin.description, :length => 300, :separator => ' ')%></td>
      <td class="text-center"><%= link_to '<i class="fa fa-edit fa-2x action-icon"></i>'.html_safe, edit_origin_path(origin),{:title => "Éditer l'origine"} %></td>   
    </tr>
  <% end %>
  </tbody>
  </table>
  
  <br />
  
  <%= paginate @origins %> 
  
</div>
